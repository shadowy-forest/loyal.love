#!/bin/bash
set -euo pipefail

# Source helper functions
SCRIPT_DIR="$(dirname "$(realpath "$0")")"
REPO_ROOT="$(git rev-parse --show-toplevel)"
source "${SCRIPT_DIR}/../generate_rss.sh"

cd "$REPO_ROOT" || {
    log "âŒ failed to change to repository root"
    exit 1
}

log "ğŸ‘¾ post-commit hook generating rss feed..."
if ! python3 -m pip install -r requirements.txt; then
    log "âŒ failed to install requirements"
    exit 1
fi

if ! generate_rss; then
    log "âŒ failed to generate rss feed"
    exit 1
fi

if git diff --quiet rss.xml; then
    log "ğŸ‘¾ no changes to rss feed"
else
    log "ğŸ‘¾ rss feed updated. committing changes..."
    if ! git add rss.xml; then
        log "âŒ failed to stage rss.xml"
        exit 1
    fi

    if ! git commit -m "chore: update rss feed" --no-verify; then
        log "âŒ failed to commit rss feed changes"
        exit 1
    fi
    log "ğŸ‘¾ rss feed changes committed"
fi

success "âœ… post-commit hook completed at $(date)"
